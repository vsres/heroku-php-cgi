#!/usr/bin/env bash
# bin/compile <build-dir> <cache-dir>

# fail fast
set -e

# config
APACHE_VERSION="2.2.22"
APACHE_PATH="apache"
PHP_VERSION="5.3.29"
PHP_PATH="php"

BIN_DIR=$(dirname $0)
BUILD_DIR=$1
CACHE_DIR=$2
LP_DIR=`cd $(dirname $0); cd ..; pwd`

# include .files when moving things around
shopt -s dotglob

cd $BUILD_DIR

# move app things to www
mkdir -p $CACHE_DIR/www
mv * $CACHE_DIR/www
mv $CACHE_DIR/www .

# keep Procfile
if [ -f www/Procfile ]; then
  mv www/Procfile .
fi

# apache
wget http://apache.cyberuse.com/httpd/httpd-$APACHE_VERSION.tar.gz
tar xvzf httpd-$APACHE_VERSION.tar.gz
cd httpd-$APACHE_VERSION
./configure --prefix=/app/apache --enable-rewrite
make
make install
cd ..

# php
wget http://php.net/get/php-$PHP_VERSION.tar.gz/from/this/mirror
mv mirror php-$PHP_VERSION.tar.gz
tar xzvf php-$PHP_VERSION.tar.gz
cd php-$PHP_VERSION/
./configure --prefix=/app/php --enable-fastcgi --with-apxs2=/app/apache/bin/apxs     \
--with-mysql --with-pdo-mysql --with-pgsql --with-pdo-pgsql         \
--with-iconv --with-gd --with-curl=/usr/lib                         \
--with-config-file-path=/app/php --enable-soap=shared               \
--with-openssl --enable-sockets
make
make install
cd ..

#tar xzvf $LP_DIR/conf/apache-$APACHE_VERSION.tar.gz
#tar xzvf $LP_DIR/conf/php-$PHP_VERSION.tar.gz
cd php
mkdir -p ext
cp $LP_DIR/conf/libmcrypt.so.4 ext
cd lib/php/extensions/no-debug-non-zts-20090626/
tar xzvf $LP_DIR/conf/ext.tar.gz
cd $BUILD_DIR

# update config files
cp $LP_DIR/conf/httpd.conf $APACHE_PATH/conf
cp $LP_DIR/conf/mod_fcgid.so $APACHE_PATH/modules
cp $LP_DIR/conf/mod_proxy.so $APACHE_PATH/modules
cp $LP_DIR/conf/mod_proxy_connect.so $APACHE_PATH/modules
cp $LP_DIR/conf/mod_proxy_http.so $APACHE_PATH/modules
cp $LP_DIR/conf/mod_proxy_ftp.so $APACHE_PATH/modules
cp $LP_DIR/conf/php.ini php

# make php available on bin
mkdir -p bin
ln -s /app/php/bin/php bin/php

cat >>boot.sh <<EOF
for var in \`env|cut -f1 -d=\`; do
  echo "PassEnv \$var" >> /app/apache/conf/httpd.conf;
done
touch /app/apache/logs/error_log
touch /app/apache/logs/access_log
tail -F /app/apache/logs/error_log &
tail -F /app/apache/logs/access_log &
export LD_LIBRARY_PATH=/app/php/ext
export PHP_INI_SCAN_DIR=/app/www
export PATH=/usr/local/bin:/usr/bin:/bin:/app/bin:/app/apache/bin
echo "Launching apache"
exec /app/apache/bin/httpd -DNO_DETACH
EOF

chmod +x boot.sh

# clean the cache
rm -rf $CACHE_DIR/*
